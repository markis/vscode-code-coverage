{
  "name": "code-coverage",
  "displayName": "Code Coverage",
  "description": "Tool to highlight lines not covered by unit tests.",
  "version": "1.1.0",
  "publisher": "markis",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.30.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markis/vscode-code-coverage.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "code coverage",
    "lcov",
    "unit test"
  ],
  "activationEvents": [
    "workspaceContains:**/lcov*.info",
    "onLanguage:clojure",
    "onLanguage:coffeescript",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:fsharp",
    "onLanguage:go",
    "onLanguage:haxe",
    "onLanguage:java",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:objective-c",
    "onLanguage:objective-cpp",
    "onLanguage:perl",
    "onLanguage:perl6",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vb"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code coverage",
      "properties": {
        "markiscodecoverage.searchCriteria": {
          "type": "string",
          "default": "coverage/lcov*.info",
          "description": "Search location for lcov files"
        }
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "camelcase": 2,
      "no-undef": 0,
      "no-unused-vars": 0
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "compile:watch": "tsc -watch -p ./",
    "preformat": "prettier --write src/**/*.ts",
    "format": "eslint --fix src/**/*.ts",
    "prelint": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "pretest": "npm run compile",
    "test": "node ./out/test/run-test.js"
  },
  "devDependencies": {
    "@types/glob": "7.1.1",
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.0",
    "@types/vscode": "1.41.0",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "glob": "7.1.6",
    "mocha": "7.0.1",
    "prettier": "1.19.1",
    "typescript": "3.7.5",
    "vscode-test": "1.3.0"
  }
}
